{% extends 'base.html.twig' %}

{% block body %}
    <h1>Circuit</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ circuit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ circuit.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ circuit.category }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ circuit.description }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ circuit.cost }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('circuit_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('circuit_edit', { 'id': circuit.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
