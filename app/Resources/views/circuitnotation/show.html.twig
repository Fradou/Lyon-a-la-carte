{% extends 'base.html.twig' %}

{% block body %}
    <h1>Circuitnotation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ circuitnotation.id }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ circuitnotation.rating }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ circuitnotation.comment }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ circuitnotation.status }}</td>
            </tr>
